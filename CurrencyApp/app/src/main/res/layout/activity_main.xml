        android:layout_height="31dp"
        android:src="@drawable/brasil"
        app:layout_constraintEnd_toStartOf="@+id/textMonedaBReal"
        app:layout_constraintHorizontal_bias="0.911"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textMonedaBReal" />

    <TextView
        android:id="@+id/textMonedaBurundi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/moneda_emirates"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textMonedaBReal"
        android:background="@color/white"/>

    <ImageView
        android:layout_width="34dp"
        android:layout_height="31dp"
        android:src="@drawable/burundi"
        app:layout_constraintEnd_toStartOf="@+id/textMonedaBurundi"
        app:layout_constraintHorizontal_bias="0.911"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textMonedaBurundi" />


</androidx.constraintlayout.widget.ConstraintLayout>